all:
  children:
    ec2_servers:
      hosts:
        # Replace with your EC2 instance details
        ec2-instance:
          ansible_host:  18.118.147.67 # Replace with your EC2 public IP
          ansible_user: ubuntu              # or 'ec2-user' for Amazon Linux
          ansible_ssh_private_key_file: ~/.ssh/juice4tech.pem  # Replace with your SSH key path
          ansible_ssh_common_args: '-o StrictHostKeyChecking=no'
          ansible_python_interpreter: /usr/bin/python3
      vars:
        # Global variables for all EC2 instances
        ansible_ssh_common_args: '-o StrictHostKeyChecking=no'
        ansible_become: yes
        ansible_become_method: sudo
        ansible_become_user: root

