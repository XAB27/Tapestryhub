# SonarQube configuration file
# Generated by Ansible

# Database configuration (using default H2 database)
# sonar.jdbc.username=sonarqube
# sonar.jdbc.password={{ sonarqube_database_password }}
# sonar.jdbc.url=jdbc:postgresql://localhost/sonarqube

# Web server configuration
sonar.web.host=0.0.0.0
sonar.web.port={{ sonarqube_port }}
sonar.web.context=/

# Search configuration
sonar.search.javaOpts=-Xmx512m -Xms512m -XX:MaxDirectMemorySize=256m -XX:+HeapDumpOnOutOfMemoryError

# Compute Engine configuration
sonar.ce.javaOpts=-Xmx512m -Xms128m -XX:+HeapDumpOnOutOfMemoryError

# Web Server configuration
sonar.web.javaOpts=-Xmx512m -Xms128m -XX:+HeapDumpOnOutOfMemoryError

# Logging configuration
sonar.log.level=INFO
sonar.log.rollingPolicy=time:yyyy-MM-dd
sonar.log.maxFiles=30

# Security configuration
sonar.security.realm=LDAP
sonar.security.savePassword=false

# Update center configuration
sonar.updatecenter.activate=true

# Default admin credentials (change after first login)
sonar.defaultAdminPassword={{ sonarqube_admin_password }}

# Path configuration
sonar.path.data=/opt/sonarqube/data
sonar.path.temp=/opt/sonarqube/temp
sonar.path.logs=/opt/sonarqube/logs
