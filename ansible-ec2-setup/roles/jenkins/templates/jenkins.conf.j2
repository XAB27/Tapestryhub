# Jenkins configuration file
# Generated by Ansible

# Jenkins home directory
JENKINS_HOME="/var/lib/jenkins"

# Jenkins user
JENKINS_USER="jenkins"

# Jenkins port
JENKINS_PORT="{{ jenkins_port }}"

# Jenkins arguments
JENKINS_ARGS="--webroot=/var/cache/jenkins/war --httpPort=$JENKINS_PORT"

# Java options
JENKINS_JAVA_OPTIONS="-Djava.awt.headless=true -Xmx2g -Xms1g"

# Log level
JENKINS_LOG_LEVEL="INFO"

# Enable access log
JENKINS_ENABLE_ACCESS_LOG="yes"

# Access log file
JENKINS_ACCESS_LOG="/var/log/jenkins/access.log"

# Jenkins log file
JENKINS_LOG="/var/log/jenkins/jenkins.log"

# Jenkins PID file
JENKINS_PID="/var/run/jenkins/jenkins.pid"
